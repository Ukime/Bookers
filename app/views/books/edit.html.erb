<h2>Editing Book</h2>

<div class="errors-box">
    <% if @book.errors.any? %>
        <div class="errtitle">
            <b>
                <%= @book.errors.count %> errors prohibited this book from being saved:
            </b>
        </div>

        <div class="errmsgbox">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        </div>
<% end %>
</div>

<div class="form">
    <%= form_with model: @book, url: "/books/#{@book.id}", method: :patch do |f| %>
    <p class="ptitle">Title</p>
    <%= f.text_field :title %>

    <p class="pbody">Body</p>
    <%= f.text_area :body %>

    <br><%= f.submit 'Update Book', class: 'submitbtn' %>

    <br>
    <p class="edit-links">
    <%= link_to "Show", book_path(@book.id), class: 'linkto' %> | <%= link_to "Back", books_path, class: 'linkto' %>

    <% end %>

    </p>
</div>