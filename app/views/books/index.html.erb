
<h1>Books</h1>

<table>
    <thead>
    <tr>

        <th class="titletd"> Title</th>
        <th> Body </th>

    </tr>

    </thead>

    <% @books.each do |book| %>

    <tbody>
        <tr>
            <td class="titletd"><%= book.title %></td>

            <td class="titletd"><%= book.body %></td>

            <td>
                <%= link_to "Show", book_path(book.id), class: 'linkto'  %>
            </td>

            <td>
                <%= link_to "Edit", edit_book_path(book.id), class: 'linkto'  %>
            </td>

            <td>
                <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'linkto'  %>
            </td>

        </tr>
    </tbody>
<% end %>
</table>


<h2>New book</h2>

<div class="errors-box">
    <% if @book.errors.any? %>
        <div class="errtitle">
            <b>
                <%= @book.errors.count %> errors prohibited this book from being saved:
            </b>
        </div>

        <div class="errmsgbox">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        </div>
<% end %>
</div>

<div class="form">
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <p class="ptitle">Title</p>
          <%= f.text_field :title %>

        <p class="pbody">Body</p>
          <%= f.text_area :body %>

        <br><%= f.submit 'Create Book', class: 'submitbtn' %>

<% end %>
</div>